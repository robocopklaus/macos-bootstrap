{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "black": "black",
    "blue": "blue",
    "green": "green",
    "red": "red",
    "white": "lightWhite",
    "yellow": "yellow"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "leading_diamond": "\ue0b6",
      "trailing_diamond": "\ue0b4",
      "segments": [
        {
          "trailing_diamond": "\ue0b4",
          "template": "{{.Icon}}",
          "foreground": "p:black",
          "background": "p:white",
          "type": "os",
          "style": "diamond"
        },
        {
          "options": {
            "home_icon": "\uf015",
            "mapped_locations": {
              "~/Development": "\uf121",
              "~/Downloads": "\uf0ed"
            },
            "style": "full"
          },
          "trailing_diamond": "\ue0b4",
          "foreground": "p:white",
          "background": "p:blue",
          "type": "path",
          "style": "diamond"
        },
        {
          "options": {
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "foreground": "p:black",
          "background": "p:green",
          "type": "git",
          "style": "diamond",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:yellow{{ end }}"
          ]
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "leading_diamond": "\ue0b6",
      "trailing_diamond": "\ue0b4",
      "segments": [
        {
          "template": "{{ if eq .Code 0 }}\uf00c{{ else }}\uf071{{ end }}",
          "foreground": "p:white",
          "background": "p:green",
          "type": "status",
          "style": "diamond",
          "background_templates": [
            "{{ if eq .Code 0 }}p:green{{ end }}",
            "{{ if eq .Code 1 }}p:red{{ end }}"
          ]
        },
        {
          "options": {
            "style": "round"
          },
          "template": " \uf252 {{ .FormattedMs }}",
          "foreground": "p:white",
          "background": "p:black",
          "type": "executiontime",
          "style": "diamond"
        }
      ]
    }
  ],
  "version": 4,
  "final_space": true
}
